{
  "name": "smart-bookmark",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "npm run build:deps && vite",
    "dev:ext": "npm run build:deps && vite build --watch",
    "build:deps": "tsc -p vendor/openagentic-sdk-ts/packages/core/tsconfig.build.json && tsc -p vendor/openagentic-sdk-ts/packages/providers-openai/tsconfig.build.json",
    "build": "npm run build:deps && vite build",
    "build:test": "npm run build:deps && vite build --mode test",
    "test": "npm run build:deps && vitest run",
    "test:watch": "npm run build:deps && vitest",
    "e2e": "npm run build:test && playwright test",
    "e2e:ui": "npm run build:test && playwright test --ui"
  },
  "dependencies": {
    "@openagentic/providers-openai": "file:vendor/openagentic-sdk-ts/packages/providers-openai",
    "@openagentic/sdk-core": "file:vendor/openagentic-sdk-ts/packages/core",
    "tldts": "^7.0.23",
    "vue": "^3.5.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.0",
    "@vitejs/plugin-vue": "^5.2.0",
    "typescript": "^5.7.0",
    "vite": "^6.1.0",
    "vitest": "^2.1.0"
  }
}
