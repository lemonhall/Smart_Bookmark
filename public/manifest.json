{
  "manifest_version": 3,
  "name": "Smart Bookmark",
  "description": "Save bookmarks faster with smart folder recommendations (host-based + optional AI).",
  "version": "0.1.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Smart Bookmark",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": ["https://api.openai.com/*", "https://www.right.codes/*"],
  "optional_host_permissions": ["https://*/*"],
  "permissions": ["bookmarks", "tabs", "activeTab", "storage", "scripting"],
  "commands": {
    "open-smart-bookmark": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Open Smart Bookmark"
    }
  }
}
